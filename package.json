{
  "name": "adaptive-music-player",
  "private": true,
  "version": "0.0.0",
  "author": {
    "name": "EnakNalla",
    "email": "enak.nalla@gmail.com"
  },
  "description": "Music player that accepts multiple input methods to start player. Used for cause and effect or learning device control.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "vite:build": "tsc && vite build",
    "electron:build": "tsc -p ./src/electron/tsconfig.json",
    "electron:dev": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "dev": "concurrently -k \"vite\" \"pnpm electron:build && pnpm electron:dev\"",
    "build": "cross-env BUILD=true pnpm vite:build && pnpm electron:build",
    "out:win": "pnpm build && electron-builder build --win",
    "out:linux": "pnpm build && electron-builder build --linux"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^27.5.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vitejs/plugin-react": "^1.3.0",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "electron": "^18.2.4",
    "electron-builder": "^23.0.3",
    "electron-store": "^8.0.1",
    "eslint": "^8.15.0",
    "eslint-plugin-react": "^7.30.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-transform-stub": "^2.0.0",
    "mobx": "^6.5.0",
    "mobx-react-lite": "^3.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-toastify": "^9.0.1",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.9",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.electron.${name}",
    "directories": {
      "output": "out"
    },
    "win": {
      "target": "portable",
      "icon": "public/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo.png"
    },
    "portable": {
      "artifactName": "adaptive-music-player.exe"
    }
  }
}
